package com.capstone.mobilestore.service;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.capstone.mobilestore.model.User;


@FeignClient(name="USER-SERVICE",fallbackFactory = UserServiceFallbackFactory.class,url = "http://localhost:8081/swagger-ui/index.html#/mobile-controller")
public interface UserServiceConsumer {

	@GetMapping("/user/{id}")
	User getUserDetails(@PathVariable("id") int userId);
}
